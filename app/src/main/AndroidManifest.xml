<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="semanticweb.hws14.activities" android:installLocation="preferExternal" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="semanticweb.hws14.movapp.activities.Criteria"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="semanticweb.hws14.movapp.activities.MovieList"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name="semanticweb.hws14.movapp.activities.Detail"
            android:label="@string/title_activity_result" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
